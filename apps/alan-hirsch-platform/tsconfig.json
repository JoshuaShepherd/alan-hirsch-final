{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "rootDir": "../../",
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@platform/contracts": [
        "../../packages/contracts/src",
        "../../packages/contracts/dist"
      ],
      "@platform/contracts/*": [
        "../../packages/contracts/src/*",
        "../../packages/contracts/dist/*"
      ],
      "@platform/ui": ["../../packages/ui/src", "../../packages/ui/dist"],
      "@platform/ui/*": ["../../packages/ui/src/*", "../../packages/ui/dist/*"],
      "@platform/database": [
        "../../packages/database/src",
        "../../packages/database/dist"
      ],
      "@platform/database/*": [
        "../../packages/database/src/*",
        "../../packages/database/dist/*"
      ],
      "@platform/shared": [
        "../../packages/shared/src",
        "../../packages/shared/dist"
      ],
      "@platform/shared/*": [
        "../../packages/shared/src/*",
        "../../packages/shared/dist/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/src/**/*",
    "../../packages/shared/src/**/*",
    "../../packages/database/src/**/*",
    "../../packages/contracts/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "../../packages/**/*.test.ts",
    "../../packages/**/*.test.tsx",
    "../../packages/**/*.spec.ts",
    "../../packages/**/*.spec.tsx"
  ]
}
